<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<!-- THIS FILE LISTS ALL THE DATA ASSOCIATED WITH Level 1 FOR THE BUGS GAME -->

<level level_name="Dangerous Desert">
  
  <!-- MAP TO BE USED FOR THIS LEVEL -->
  <level_map map_dir="data/maps/TopDownDesert/" map_file="TopDownDesert.tmx" />
  
  <!-- COMPLETE LIST OF SPRITE TYPES USED FOR THIS LEVEL TO BE LOADED AT LEVEL LOAD TIME -->
  <level_sprite_types sprite_types_dir="data/sprite_types/" sprite_types_file="BeginnerBugs.xml" />
  
  <!-- THESE ARE THE BOT TYPES THE LEVEL WILL BE SPAWNING -->
  <level_bot_types>
    <bot type="steady_ant"    sprite_type="black_ant" MOVING="deterministic"   DYING="recycle" SPAWNING="random" max_velocity="5"/>
    <bot type="confused_ant"  sprite_type="black_ant" MOVING="random_interval" DYING="respawn" SPAWNING="random" max_velocity="5"/>
    <bot type="lazy_aphid"    sprite_type="aphid"     MOVING="deterministic"   DYING="recycle" SPAWNING="random" max_velocity="5"/>
    <bot type="deadly_aphid"  sprite_type="aphid"     MOVING="random_interval" DYING="respawn" SPAWNING="random" max_velocity="5"/>
  </level_bot_types>
  
  <!-- INITIAL BOTS WHEN THE LEVEL STARTS -->
  <bots_list>
    <bot type="steady_ant"    init_x="200"  init_y="100" init_vx="2" init_vy="2" init_bot_state="MOVING" init_sprite_state="WALKING" />
    <bot type="steady_ant"    init_x="400"  init_y="300" init_vx="-2"  init_vy="2" init_bot_state="MOVING" init_sprite_state="WALKING" />
    <bot type="confused_ant"  init_x="600"  init_y="500" init_vx="1" init_vy="2"  init_bot_state="MOVING" init_sprite_state="WALKING" />
    <bot type="confused_ant"  init_x="800"  init_y="700" init_vx="-1"  init_vy="3"  init_bot_state="MOVING" init_sprite_state="WALKING" />
    <bot type="lazy_aphid"    init_x="1000" init_y="100" init_vx="4" init_vy="1" init_bot_state="MOVING" init_sprite_state="WALKING" />
    <bot type="lazy_aphid"    init_x="800"  init_y="300" init_vx="3" init_vy="-3" init_bot_state="MOVING" init_sprite_state="WALKING" />
    <bot type="deadly_aphid"  init_x="600"  init_y="200" init_vx="1" init_vy="1" init_bot_state="MOVING" init_sprite_state="WALKING" />
    <bot type="deadly_aphid"  init_x="400"  init_y="300" init_vx="0" init_vy="0" init_bot_state="MOVING" init_sprite_state="WALKING" />
  </bots_list>
  
  <!-- WE CAN EVEN SPECIFY BOT SPAWN LOCATIONS -->
  <spawning_pools>
    <spawning_pool x="128"  y="128"   type="steady_ant"   interval_time="500"   interval_type="scheduled" />
    <spawning_pool x="128"  y="3008"   type="confused_ant" interval_time="500"   interval_type="random"    />
    <spawning_pool x="3008"  y="128"   type="lazy_aphid"   interval_time="500"   interval_type="scheduled" />
    <spawning_pool x="3008" y="3008"  type="deadly_aphid" interval_time="500"  interval_type="random"    />
  </spawning_pools>
</level>
